<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sanjeevkumar.gymapp.linkActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backclr"
        android:id="@+id/lineartext"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" DYNAMO "
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:textStyle="bold"/>
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/logoimage"
            android:padding="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/muscle"
            app:civ_border_color="#FF000000"
            android:layout_gravity="center"/>

        <TextView
            android:layout_marginTop="20dp"
          android:fontFamily="sans-serif-smallcaps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp"
            android:text=" JUST A FEW STEPS AWAY TO START YOUR FITNESS JOURNEY: "
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/lineartext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/facebook"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/facebookl"
            android:text=" FACEBOOK "
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="@android:color/white"
            android:background="@drawable/buttonfile"
            android:paddingLeft="10dp"
            />
        <Button
            android:id="@+id/google"
            android:textStyle="bold"
            android:background="@drawable/buttonfile"
            android:textSize="17dp"
            android:text=" GOOGLE "
            android:textColor="@android:color/white"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/googleplus"/>
        <Button
            android:id="@+id/signup"
            android:textColor="@android:color/white"
            android:text="SIGN UP"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:background="@drawable/buttonfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
